@{
    ViewData["Title"] = "Admin Product";
}
@model Association

<partial name="_AdminHeader"></partial>



<h1 class="text-center my-2">@ViewBag.CurrentProd.Name</h1>

<p class="text-center my-2">@ViewBag.CurrentProd.Description</p>

<h3 class="text-center my-2">$@ViewBag.CurrentProd.Price</h3>

<h3>Categories</h3>



<div class="text-center">
      
      <div class="container mt-5">
    <div class="row">
        <div class="col-md">
            
                <ul class="list-group">

                 @foreach (Category cat in ViewBag.ShowCats)
                {
                  <li class="list-group-item">@cat.Name</li>
                  
                }

             </ul>

        </div>
        <div class="col-md">
            
            <form asp-controller="Admin" asp-action="AddProdCat">

              <div class="form-group">
                <label asp-for="CategoryId">Categories</label>
                <span class="text-danger font-weight-bold" asp-validation-for="CategoryId"></span>
                <select asp-for="CategoryId">
                    @foreach (Category cat in ViewBag.AddCats)
                    {
                    
                      <option value="@cat.CategoryId">@cat.Name</option>
                      
                    }
              </select>
              <input asp-for="ProductId" type="hidden" value="@ViewBag.CurrentProd.ProductId">
              </div>
              
             
              
              <button class="btn btn-info" type="submit">Add</button>
            </form>
            
        </div>
    </div>
</div>