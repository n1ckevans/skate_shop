@{
    ViewData["Title"] = "Admin Register";
}

@model User

<h3 class="text-center">Register</h3>
<hr>

<form asp-controller="Admin" asp-action="Register">

  <div class="form-group">
    <label asp-for="FirstName"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
    <input class="form-control" asp-for="FirstName">
    
  </div>
  
  <div class="form-group">
    <label asp-for="LastName"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
    <input class="form-control" asp-for="LastName">
  </div>
          
  <div class="form-group">
    <label asp-for="Email"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Email"></span>
    <input class="form-control" asp-for="Email">
  </div>
          
  <div class="form-group">
    <label asp-for="Password"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
    <input class="form-control" asp-for="Password">
  </div>

  <div class="form-group">
    <label asp-for="ConfirmPassword"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="ConfirmPassword"></span>
    <input class="form-control" asp-for="ConfirmPassword">
  </div>
  
  <button class="btn btn-info" type="submit">Register</button>
</form>