@{
    ViewData["Title"] = "All Products";
}

 <partial name="_AdminHeader"></partial>

<h3 class="text-center my-2">All Products</h3>

<div class="row">



  @foreach (Product prod in ViewBag.AllProds)
{

     <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <!-- <a href="#"><img class="card-img-top" src="~/img/polar.jpeg" alt="Polar Deck"></a> -->
              <div class="card-body">
                <h4 class="card-title">
                  <a href="/adminproduct/@prod.ProductId">@prod.Name</a>
                </h4>
                <h5>$@prod.Price</h5>
                <p class="card-text"></p>
              </div>
              <div class="card-footer">
                
                 <a class="btn btn-danger" href="/deleteprod/@prod.ProductId/">Delete</a>
              

              </div>
            </div>
          </div>

  
}


</div>
